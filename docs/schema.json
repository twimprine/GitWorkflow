{
  "$schema": "https://example.com/prp-context.schema.json",
  "include": [
    "docs/**",
    "contracts/**",
    "schemas/**",
    "api/**",
    "src/**",
    "app/**",
    "lib/**",
    "config/**",
    ".github/workflows/**",
    "migrations/**",
    "scripts/**",
    "README.md",
    "CLAUDE.md"
  ],
  "exclude": [
    "node_modules/**",
    "venv/**",
    ".venv/**",
    ".git/**",
    ".idea/**",
    ".vscode/**",
    "dist/**",
    "build/**",
    ".cache/**",
    "coverage/**",
    "logs/**",
    "batch/**",
    "prp/queue/**",
    "prp/drafts/**",
    "prp/active/**",
    "prp/completed/**",
    "*.lock",
    "*.min.*"
  ],
  "extensions": [
    ".md",
    ".txt",
    ".json",
    ".yaml",
    ".yml",
    ".py",
    ".sh",
    ".ts",
    ".tsx",
    ".js",
    ".jsx",
    ".java",
    ".go",
    ".rb",
    ".sql",
    ".graphql",
    ".proto",
    ".sol",
    ".tf"
  ],
  "maxFileKB": 256,
  "followSymlinks": false,
  "cacheTTLHours": 24
}